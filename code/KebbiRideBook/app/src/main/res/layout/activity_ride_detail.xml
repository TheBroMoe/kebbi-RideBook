<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".RideDetailActivity">

    <TextView
        android:id="@+id/title_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Title"
        android:layout_margin="24dp"
        android:textSize="36sp"/>

    <TextView
        android:id="@+id/date_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Date"
        android:layout_margin="12dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/time_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Time"
        android:layout_margin="12dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/distance_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Distance"
        android:layout_margin="12dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/speed_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Speed"
        android:layout_margin="12dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/cadence_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Cadence"
        android:layout_margin="12dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/comment_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Comment"
        android:layout_margin="12dp"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/new_ride_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:onClick="returnAction"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Return"
            android:textSize="30sp" />


    </LinearLayout>

</LinearLayout>

